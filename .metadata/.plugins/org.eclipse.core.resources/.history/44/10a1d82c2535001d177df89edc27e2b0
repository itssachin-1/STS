
# DB connection configuration
spring.datasource.url= jdbc:mysql://localhost:3306/sms?createDatabaseIfNotExist=true&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password==mysql01)

# Hibernate
spring.jpa.properties.hibernate.dialect= org.hibernate.dialect.MySQL8InnoDBDialect
spring.jpa.hibernate.ddl-auto=create

# Simplest way of logging to standard output
# It's not recommended, as it directly unloads everything to standard output without any optimizations of a logging framework.
spring.jpa.show-sql=true	

# Logging Via Loggers the recommended way
logging.level.org.hibernate.SQL=DEBUG
# for prepared statement parameters
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

#To beautify or pretty print the SQL
spring.jpa.properties.hibernate.format_sql= true
